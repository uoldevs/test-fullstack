generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Client {
  id          Int    @id @default(autoincrement())
  name        String
  email       String @unique
  cpf         String @unique
  phoneNumber String @map("phone_number")
  statusId    Int
  status      Status @relation(fields: [statusId], references: [id], onUpdate: Cascade, onDelete: Restrict)

  @@map("clients")
}

model Status {
  id    Int      @id @default(autoincrement())
  name  String   @unique
  users Client[]

  @@map("status")
}
